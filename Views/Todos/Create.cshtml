@model ToDoList.Models.Todo;

@{
    ViewBag.Title = "Создание";
    Layout = "_Layout";
}

<div class="container">
    <div class="row">
        <div class="col-4">
            <div class="input-group input-group-sm mb-3">
                <form asp-action="Create" asp-controller="Todos" method="post">
                    <span class="input-group-text" id="inputGroup-sizing-sm">Введите заголовок</span>
                    <input autocomplete="off" type="text" class="form-control" asp-for="Title" aria-label="Small" aria-describedby="inputGroup-sizing-sm">
                    <span asp-validation-for="Title" style="color: red"></span>

                    <span class="input-group-text" id="inputGroup-sizing-sm">Введите описание</span>
                    <input autocomplete="off" type="text" class="form-control" asp-for="Description" aria-label="Small" aria-describedby="inputGroup-sizing-sm">
                    <span asp-validation-for="Description" style="color: red"></span>

                    <span class="input-group-text" id="inputGroup-sizing-sm">Выберита приоритет</span>
                    <select style="margin: 20px 0" asp-for="Priority" class="form-select" aria-label="Default select example">
                        <option asp-for="Product.CategoryId" value="Высокий">Высокий</option>
                        <option asp-for="Product.CategoryId" value="Средний">Средний</option>
                        <option asp-for="Product.CategoryId" value="Низкий">Низкий</option>
                    </select>
                    <span asp-validation-for="Priority" style="color: red"></span>

                    <button style="width: 300px;" type="submit" class="btn btn-success btn-sm">Создать задачу</button>
                </form>
            </div>
            <a class="btn btn-success btn-sm" role="button" asp-action="Index" asp-controller="Todos">Вернуться на главную</a>
        </div>
    </div>
</div>
@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}